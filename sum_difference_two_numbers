#include <stdio.h>
int main() {
    int num, tens, ones, sum, diff;

    printf("Enter a two-digit number: ");
    scanf("%d", &num);

    tens = num / 10;
    ones = num % 10;
    
    sum = tens + ones;
    diff = tens - ones;

    printf("Sum of the digits: %d\n", sum);
    printf("Difference of the digits: %d\n", diff);

    return 0;
}
